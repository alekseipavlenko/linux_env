export CMAKEPM_CONFIG_PATH=${HOME}/.cmakepm/cmakepm.conf

use_gxx_49() {
    export TargetOS=debian-8.7
    export TargetArchitecture=x86_64
    export PlatformToolset=gcc-4.9
    export CC=/usr/bin/gcc-4.9
    export CXX=/usr/bin/g++-4.9
}

use_gxx_5() {
    export TargetOS=debian-8.7
    export TargetArchitecture=x86_64
    export PlatformToolset=gcc-5
    export CC=/usr/bin/gcc-5
    export CXX=/usr/bin/g++-5
}

use_gxx_52() {
    export TargetOS=debian-8.7
    export TargetArchitecture=x86_64
    export PlatformToolset=gcc-5.2
    export CC=/usr/bin/gcc-5.2
    export CXX=/usr/bin/g++-5.2
}

use_gxx_52
